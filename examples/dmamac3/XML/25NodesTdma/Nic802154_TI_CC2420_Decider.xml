<?xml version="1.0" encoding="UTF-8"?>
<root>
	<Decider type="Decider802154Narrow">
		<!--Length of Start Frame Delimiter (used to compute probability of successful 
			synchronization)-->
		<parameter name="sfdLength" type="long" value="8"/>
		
		<!--bool noErrors is set to true !aaks we make it false for packet error but now true 25-Dec-2014-->
		<parameter name="noErrors" type="bool" value="true"/>
		
		<!--minimum possible bit error rate (BER floor)-->
		<parameter name="berLowerBound" type="double" value="1e-25"/>
		
		<!--standard bit error rate !aaks-->
		<!--parameter name="avgBER" type="double" value="1e-1"/-->
		
		<!--modulation type-->
		<parameter name="modulation" type="string" value="msk"/>
	</Decider>
</root>